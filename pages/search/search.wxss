/* pages/search/search.wxss */
@import '../../iconfont.wxss';
page{
  background: #fff;
  width: 670rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.header{
  flex: 0 0 100rpx;
  display: flex;
  align-items: center;
}
.header view{
  background: #f0f0f0;
  display: flex;
  flex-grow: 1;
  height: 80rpx;
  border-radius: 40rpx;
  align-items: center;
  position: relative;
}
.header view icon{
  font-size: 40rpx;
  margin: 0 20rpx;
}
.scroll{
  flex-grow: 1;
  display: flex;

}
.title{
  font-size: 40rpx;
  font-weight: 700;
  margin: 30rpx 0;
}
.history{
  margin-top: 20rpx;
  font-weight: normal;
  display: flex;
  flex-wrap: wrap;
}
.history text{
  padding: 20rpx 0;
  margin: 20rpx 40rpx 20rpx 0;
}
.history text{
  font-size: 30rpx;
  padding: 10rpx 34rpx;
  border-radius: 30rpx;
  background: #eee;
}
.hot{
  margin: 30rpx 0;
  font-size: 34rpx;
}
.hotindex{
  margin: 0 50rpx 0 20rpx;
}

.searchsong{
  background: #f0f0f0;
  padding: 30rpx 0;
  flex-grow: 1;
  height: 100%;
}
.searchsong view{
  font-size: 34rpx;
  padding-left: 30rpx;
}
.searchsong .sousuo{
  margin-bottom: 20rpx;
}
.searchsong .sousuo text{
  color: blue;
}
.list{
  line-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list icon{
  font-size: 34rpx;
  color: #bbb;
}
